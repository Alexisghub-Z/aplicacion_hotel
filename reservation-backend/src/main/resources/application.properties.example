# Application Configuration
spring.application.name=hotel-reservation-backend

# Server Configuration
server.port=8080

# H2 Database Configuration (Persistente en archivo)
spring.datasource.url=jdbc:h2:file:./data/hoteldb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# H2 Console Configuration
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# JPA Configuration
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.defer-datasource-initialization=true

# SQL Initialization (solo ejecutar si las tablas están vacías)
spring.sql.init.mode=never
spring.sql.init.continue-on-error=true

# Logging Configuration
logging.level.org.springframework.web=INFO
logging.level.com.hotel.reservation=DEBUG

